<script>
    

   async function exportVoucherAsPDF() {
    try {
        const voucherID= document.getElementById('exportButton').value
        const res=await fetch('/exportPDF',{
            method:'POST',
            headers:{
                'Content-Type':'application/json',
            },
            body:JSON.stringify({voucherID})
        })

        if(res.ok){
            const blob = await res.blob();
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `voucher_${voucherID}.pdf`;
            a.click();
                    Swal.fire({
                        toast: true,
                        position: "bottom",
                        showConfirmButton: false,
                        timer: 2000,
                        customClass: {
                            popup: 'swal-toast',
                            title: 'swal-toast-title'
                        },
                        didOpen: (toast) => {
                            toast.style.backgroundColor = "black";
                            toast.style.color = "white";
                            toast.style.fontSize = "11px";
                        },
                        text: "pdf Generated successfully"
                    });
                } else {
            console.error('Failed to export PDF');
        }
        } catch (error) {
            console.error('Error exporting PDF:', error);
        }
           
}







    async function generateQrCode(){
        try {
            const voucherName = document.getElementById("voucherName").value;
            if (!voucherName.trim()) {
                const Toast = Swal.mixin({
    toast: true,
    position: "bottom",
    showConfirmButton: false,
    timer: 2000,
    customClass: {
        popup: 'swal-toast',
        title: 'swal-toast-title'
    },
    didOpen: (toast) => {
        toast.style.backgroundColor = "black";
        toast.style.color = "white";
        toast.style.fontSize = "11px";
    }
});

Toast.fire({
    text: "please enter a vocher name"
            });
            return;
        }
            const response = await fetch('/generate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({name: voucherName }),
            });

            const result = await response.json();

            if(result.number){
                const image=document.getElementById('qr-image')
              document.getElementById('qr-image').src = result.number;
              document.getElementById('exportButton').value=result.id
            
            const Toast = Swal.mixin({
    toast: true,
    position: "bottom",
    showConfirmButton: false,
    timer: 2000,
    customClass: {
        popup: 'swal-toast',
        title: 'swal-toast-title'
    },
    didOpen: (toast) => {
        toast.style.backgroundColor = "black";
        toast.style.color = "white";
        toast.style.fontSize = "11px";
    }
});

Toast.fire({
    text: "generated successfully"
            });
         }
        } catch (error) {
            console.error('Error generating QR code:', error);
        }
    }
